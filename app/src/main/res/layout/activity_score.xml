<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreActivity">

    <EditText
        android:id="@+id/SCORE_TEXT_USERNAME"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foregroundGravity="right"
        android:gravity="right|center_vertical"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingEnd="10sp"
        android:textAlignment="textEnd"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        tools:ignore="LabelFor,MissingConstraints,RtlCompat,RtlHardcoded,RtlSymmetry" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingTop="50dp"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        tools:context=".MenuActivity">

        <TextView
            android:id="@+id/SCORE_LEVEL_TYPE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/SCORE_IMAGE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/loose"
            android:contentDescription="@string/na" />

        <Button
            android:id="@+id/SCORE_RETOUR_MENU"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/restart"
            android:textColor="#ffffff" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>